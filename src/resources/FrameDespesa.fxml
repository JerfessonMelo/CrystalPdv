<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="contentPaneDespesa" prefHeight="400.0" prefWidth="700.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ControllerDespesa">
   <children>
      <Label layoutX="10.0" layoutY="110.0" prefHeight="20.0" prefWidth="115.0" text="Nome da Despesa:" />
      <TextField fx:id="txtNomeDespesa" layoutX="125.0" layoutY="105.0" prefHeight="25.0" prefWidth="150.0" />
      <TextField fx:id="txtValor" layoutX="125.0" layoutY="175.0" prefHeight="25.0" prefWidth="150.0" />
      <Label layoutX="10.0" layoutY="180.0" prefHeight="20.0" prefWidth="115.0" text="Valor R$:" />
      <Label layoutX="10.0" layoutY="145.0" prefHeight="20.0" prefWidth="115.0" text="Data da Despesa" />
      <DatePicker fx:id="dateDespesa" layoutX="125.0" layoutY="140.0" prefHeight="25.0" prefWidth="150.0" />
      <Label layoutX="10.0" layoutY="210.0" prefHeight="20.0" prefWidth="115.0" text="Observações:" />
      <TextArea fx:id="txtObservacao" layoutX="125.0" layoutY="210.0" prefHeight="90.0" prefWidth="280.0" />
      <HBox layoutX="5.0" layoutY="30.0" prefHeight="80.0" prefWidth="410.0" spacing="5.0" stylesheets="@styles.css">
         <children>
            <Button fx:id="btnVolta" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#voltarParaMenu" prefHeight="60.0" prefWidth="95.0" text="VOLTA">
               <font>
                  <Font size="6.0" />
               </font>
            </Button>
            <Button fx:id="btnExcluir" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="60.0" prefWidth="95.0" text="EXCLUIR">
               <font>
                  <Font size="6.0" />
               </font>
            </Button>
            <Button fx:id="btnConsulta" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#abrirTelaListaDespesa" prefHeight="60.0" prefWidth="110.0" text="CONSULTA">
               <font>
                  <Font size="6.0" />
               </font>
            </Button>
            <Button fx:id="btnSalvar" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="60.0" prefWidth="95.0" text="SALVAR">
               <font>
                  <Font size="6.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <Label fx:id="labelNomeTelas" layoutX="225.0" layoutY="5.0" prefWidth="250.0" text="Despesas" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
